<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Dashboard</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <a href="/admin/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
    </div>
    <div class="btn-group me-2">
      <a href="/admin/logout" class="btn btn-sm btn-outline-danger">Logout</a>
    </div>
  </div>
</div>

<% messages.forEach(element=> { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= element %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% }) %>

    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Status(active/blocked)</th>
            <th scope="col" class="text-end">Action</th>
          </tr>
        </thead>
        <tbody>
          <% customers.forEach(element=> { %>
            <tr class="align-middle">
              <td>
                <%= element.username %>
              </td>
              <td>
                <%= element.email %>
              </td>
              <td>
                <% if (element.blocked) { %>
                  Blocked
                  <% }else{ %>
                    Not blocked
                    <% }%>

              </td>
              <td class="text-end">
                <div class="d-flex flex-row justify-content-end gap-2">
                  <a href="/admin/view/<%= element._id %>" class="btn btn-primary btn-sm">
                    <i class="bi bi-eye"></i>
                  </a>
                  <a href="/admin/edit/<%= element._id %>" class="btn btn-warning btn-sm">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <form action="/admin/block/<%= element._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">
                      <i class="bi bi-person-x"></i> Block
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>

    <% if (customers.length> 0) { %>
      <nav aria-label="Dashboard Pagination">
        <ul class="pagination justify-content-center mt-5">

          <% if (current==1) { %>
            <li class="page-item disabled"><a href="#" class="page-link">First</a></li>
            <% } else { %>
              <li class="page-item"><a href="/admin/dashboard/?page=1" class="page-link">First</a></li>
              <% } %>

                <% var i=(Number(current)> 5 ? Number(current) - 4 : 1); %>
                  <% if(i !==1) { %>
                    <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
                    <% } %>

                      <% for(; i <=(Number(current) + 4) && i <=pages; i++) { %>
                        <% if (i==current) { %>
                          <li class="page-item disabled"><a href="#" class="page-link">
                              <%= i %>
                            </a></li>
                          <% } else { %>
                            <li class="page-item"><a href="/admin/dashboard/?page=<%= i %>" class="page-link">
                                <%= i %>
                              </a></li>
                            <% } %>
                              <% if (i==Number(current) + 4 && i < pages) { %>
                                <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
                                <% } %>
                                  <% } %>

                                    <% if (current==pages) { %>
                                      <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
                                      <% } else { %>
                                        <li class="page-item"><a href="/admin/dashboard/?page=<%= pages %>"
                                            class="page-link">Last</a></li>
                                        <% } %>

        </ul>
      </nav>
      <% } %>